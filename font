#REPOCAD single stroke font

#A
def A(x as Number y as Number hgt as Number) = {
def h = hgt / 3
line(-1 * h 0 0 3 * h)
line(1 * h 0 0 3 * h)
line(-0.5 * h h / 0.7 0.5 * h h / 0.7)
}

#B
def B(x as Number y as Number hgt as Number) = {
def h = hgt / 3
line(-1 * h 0 0 3 * h)
line(1 * h 0 0 3 * h)
line(-0.5 * h h / 0.7 0.5 * h h / 0.7)
}

#test
A(5 0 8)
#A(10 0 8)
