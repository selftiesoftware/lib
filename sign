import geometry2d
import dimensions

def font = "Arial"
def scale = 20
def content = "hello there"
def marginHeight = 20
def marginWidth = 16

def r as Vector = text(0 0 scale content font)
def bottom = (marginHeight * -1)
def left = marginWidth * -1
def right = r.x + marginWidth
def top = r.y + marginHeight - 1

dim(Vector(right bottom) Vector(right top) 7)
dim(Vector(right bottom) Vector(left bottom) 7)

