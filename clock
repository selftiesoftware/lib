#CLOCK DIAMETER
def d = 57

#SIZE OF THE DIGITS
def textSize = 5

#MARGIN BETWEEN PERIPHEPY AND MARKS
def outer = (d / 2) - 1
def innerFive = (d / 2) - 5
def innerOne = (d / 2) - 3

#FIVE MINUTE MARKS
repeat -2 to 10 using i {
def scalar = (i * 30)
def x = -1 * cos(radians(scalar))
def y = sin(radians(scalar))
def tX = -1
def tY = -1
text(tX - x * innerFive - 2 tY - y * innerFive - 2 textSize i + 3)
line(x * innerFive y * innerFive x * outer y * outer)
}

#ONE MINUTE MARKS
repeat 0 to 60 using i {
def x = cos(radians(i * 6))
def y = sin(radians(i * 6))
line(x * innerOne y * innerOne x * outer y * outer)
}

#OUTER AND CENTER CIRCLE
circle(0 0 d / 2)
circle(0 0 1)
